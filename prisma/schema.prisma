generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("localDB")
}

model Mark {
  id            Int      @id @default(autoincrement())
  uid           String   @unique
  book_name     String
  author        String
  year_created  String
  book_genre    String
  publisher     String
  recipient     String   @default("")
  checkout_date String   @default("")
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  @@map("marks")
}

model User {
  id    Int    @id @default(autoincrement())
  email String @unique

  password   String
  name       String
  last_name  String
  roles      Role[]   @default([USER])
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("users")
}

enum Role {
  USER
  ADMIN
}
