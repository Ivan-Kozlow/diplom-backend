generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Mark {
  id          Int      @id @default(autoincrement())
  uid         String   @unique
  description String?
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@map("marks")
}

model User {
  id    Int    @id @default(autoincrement())
  email String @unique

  password   String
  name       String
  last_name  String
  roles      Role[]   @default([USER])
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("users")
}

enum Role {
  USER
  ADMIN
}
